<div class="span6 offset4 frosty">
	<div class="span 6">

		<h2>Forgot your password?</h2>

		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, html: { class: 'form-horizontal'} ) do |f| %>
		  <%= f.error_notification %>

		  <%= f.input :email, :autofocus => true %>

		  <div class="pull-right">
		  	<%= f.submit "Reset Password", class: "btn btn-primary" %>
		  </div>

		 <% end %> 

		<%= render "devise/shared/links" %>
	</div>
</div>